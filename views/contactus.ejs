    <div class="section">
      <div class="container">
        <div class="row">
          <div
            class="col-lg-4 mb-5 mb-lg-0"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            <div class="contact-info">
              <div class="address mt-2">
                <i class="icon-room"></i>
                <h4 class=" white mb-2">Location:</h4>
                <p class="white">
                  Mumbai,<br />
                  Maharashtra
                </p>
              </div>

              <div class="open-hours mt-4">
                <i class="icon-clock-o"></i>
                <h4 class="white mb-2">Open Hours:</h4>
                <p class="white">
                 Monday off<br />
                  10:00 AM - 8:00 PM
                </p>
              </div>

              <div class="email mt-4">
                <i class="icon-envelope"></i>
                <h4 class="white mb-2">Email:</h4>
                <p class="white">emitencerealty@gmail.com</p>
              </div>

              <div class="phone mt-4">
                <i class="icon-phone"></i>
                <h4 class="white mb-2">Call:</h4>
                <p class="white">+91 91591-55237</p>
              </div>
            </div>
          </div>
          <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200" id="contact">
            <form id="flatEnquiryForm" action="/submit" method="post">
              <label for="name">Name:</label>
              <input type="text" id="name" name="name" placeholder="Name"><br><br>
            
              <label for="contactNumber">Contact Number:</label>
              <input type="text" id="contactNumber" placeholder="Phone Number" name="contactNumber" required><br><br>
            
              <label for="location">Preferred City & Location:</label>
              <select id="location" name="location">
                <option value="Mumbai">Mumbai</option>
                <option value="Navi Mumbai">Navi Mumbai</option>
                <option value="Thane">Thane</option>
              
              </select><br><br>
            
              <label for="flatType">Typology</label>
             
              <select id="flatType" name="flatType">
                <option value="1 RK">1 RK</option>
                <option value="5 BHK Jodi">5 BHK Jodi</option>
                <option value="Penthouse">Penthouse</option>
             
              </select>
              <label for="budget">Budget:</label>
              <select id="budget" name="budget">
                <option value="10 To 15 Cr ">10 To 15 Cr</option>
                <option value="15 to 20 Cr">15 to 20 Cr</option>
             
              </select><br><br>
            
              <input type="submit" value="Submit">
            </form>
          </div>
        </div>
      </div>
    </div>

